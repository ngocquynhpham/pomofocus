{
  "manifest_version": 3,
  "name": "PomoFocus - Focus Timer & Task Tracker",
  "version": "1.0",
  "description": "Công cụ Pomodoro giúp bạn tập trung và quản lý thời gian hiệu quả.",
  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "activeTab",
    "scripting",
    "offscreen"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Mở PomoFocus"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon48.png",
    "48": "icons/icon48.png",
    "128": "icons/icon48.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["style.css", "popup.js"],
      "matches": ["<all_urls>"]
    }
  ]
}